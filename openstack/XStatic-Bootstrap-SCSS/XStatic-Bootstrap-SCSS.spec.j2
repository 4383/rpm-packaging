{% set pypi_name = 'XStatic-Bootstrap-SCSS' %}
{% set upstream_version = upstream_version('3.3.7.1') %}
{% set rpm_release = '1' %}
{% set source = url_pypi() %}

Name:           {{ py2name() }}
Version:        {{ py2rpmversion() }}
Release:        {{ py2rpmrelease() }}
Summary:        Bootstrap-SCSS %{version} (XStatic packaging standard)
License:        {{ license('MIT') }}
Group:          Development/Languages/Python
URL:            https://opendev.org/openstack/XStatic-Bootstrap-SCSS/
Source0:        {{ source }}
BuildRequires:  openstack-macros
BuildRequires:  {{ py2pkg('setuptools', py_versions=['py2', 'py3'])}}
Requires:       {{ py2pkg('XStatic') }}
BuildArch:      noarch
%python_subpackages

%description
Bootstrap style library packaged for setuptools (easy_install) / pip.

%prep
%autosetup -n {{ pypi_name }}-{{ upstream_version }}
%py_req_cleanup

%build
%{python_build}

%install
%{python_install}

%files %{python_files}
%doc README.txt
%{python_sitelib}/xstatic
%{python_sitelib}/XStatic_Bootstrap_SCSS-%{version}-py?.?.egg-info
%{python_sitelib}/XStatic_Bootstrap_SCSS-%{version}-py?.?-nspkg.pth

%changelog
