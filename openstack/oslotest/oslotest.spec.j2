Name:           {{ 'oslotest' | py2pkg }}
Version:        2.0.0
Release:        0
Summary:        OpenStack test framework
License:        {{ 'Apache-2.0' | license }}
Url:            https://launchpad.net/oslotest
Source:         https://pypi.python.org/packages/source/o/oslotest/oslotest-%{version}.tar.gz
BuildRequires:  openstack-macros
BuildRequires:  {{ 'devel' | py2pkg }}
BuildRequires:  {{ 'pbr' | py2pkg }}
# Test requirements:
BuildRequires:  {{ 'debtcollector' | py2pkg }} >= 0.3.0
BuildRequires:  {{ 'fixtures' | py2pkg }} >= 0.3.14
BuildRequires:  {{ 'mock' | py2pkg }} >= 1.0
BuildRequires:  {{ 'mox3' | py2pkg }} >= 0.7.0
BuildRequires:  {{ 'python-subunit' | py2pkg }} >= 0.0.18
BuildRequires:  {{ 'six' | py2pkg }}
BuildRequires:  {{ 'testrepository' | py2pkg }} >= 0.0.18
BuildRequires:  {{ 'testscenarios' | py2pkg }} >= 0.4
BuildRequires:  {{ 'testtools' | py2pkg }} >= 1.4.0
Requires:       {{ 'fixtures' | py2pkg }} >= 1.3.1
Requires:       {{ 'mock' | py2pkg }} >= 1.0.1
Requires:       {{ 'mox3' | py2pkg }} >= 0.7.0
Requires:       {{ 'os-client-config' | py2pkg }} >= 1.4.0
Requires:       {{ 'python-subunit' | py2pkg }} >= 0.0.18
Requires:       {{ 'six' | py2pkg }} >= 1.9.0
Requires:       {{ 'testrepository' | py2pkg }} >= 0.0.18
Requires:       {{ 'testscenarios' | py2pkg }} >= 0.4
Requires:       {{ 'testtools' | py2pkg }} >= 1.4.0
BuildArch:      noarch

%description
The Oslo Test framework provides common fixtures, support for debugging, and
better support for mocking results.

%prep
%setup -q -n oslotest-%{version}

%build
%{__python2} setup.py build

%install
%{__python2} setup.py install --prefix=%{_prefix} --root=%{buildroot}

%check
testr init && testr run

%files
%license LICENSE
%doc ChangeLog README.rst AUTHORS
%{_bindir}/oslo_debug_helper
%{_bindir}/oslo_run_cross_tests
%{_bindir}/oslo_run_pre_release_tests
%{python2_sitelib}/oslotest
%{python2_sitelib}/oslotest*egg-info

%changelog
