BuildRequires:  {{ py2pkg('mox3', (">=", "0.7.0")) }}
BuildRequires:  {{ py2pkg('pbr') }}
BuildRequires:  {{ py2pkg('python-subunit', (">=", "0.0.18")) }}
BuildRequires:  {{ py2pkg('six') }}
