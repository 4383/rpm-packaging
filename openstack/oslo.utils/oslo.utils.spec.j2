%global sname oslo.utils

Name:           {{ 'oslo.utils' | py2pkg }}
Version:        3.6.0
Release:        0
Summary:        OpenStack utils library
License:        {{ 'Apache-2.0' | license }}
Url:            https://launchpad.net/%{sname}
Source0:        https://pypi.python.org/packages/source/o/%{sname}/%{sname}-%{version}.tar.gz
BuildRequires:  openstack-macros
BuildRequires:  {{ 'Babel' | py2pkg }}
BuildRequires:  {{ 'debtcollector' | py2pkg }}
BuildRequires:  {{ 'fixtures' | py2pkg }}
BuildRequires:  {{ 'iso8601' | py2pkg }}
BuildRequires:  {{ 'monotonic' | py2pkg }}
BuildRequires:  {{ 'netaddr' | py2pkg }}
BuildRequires:  {{ 'netifaces' | py2pkg }}
BuildRequires:  {{ 'oslo.i18n' | py2pkg }}
BuildRequires:  {{ 'oslotest' | py2pkg }}
BuildRequires:  {{ 'pbr' | py2pkg }}
BuildRequires:  {{ 'testrepository' | py2pkg }}
BuildRequires:  {{ 'testtools' | py2pkg }}
BuildRequires:  {{ 'wrapt' | py2pkg }}
Requires:       {{ 'Babel' | py2pkg }} >= 1.3
Requires:       {{ 'debtcollector' | py2pkg }} >= 1.2.0
Requires:       {{ 'funcsigs' | py2pkg }} >= 0.4
Requires:       {{ 'iso8601' | py2pkg }} >= 0.1.9
Requires:       {{ 'monotonic' | py2pkg }} >= 0.6
Requires:       {{ 'netaddr' | py2pkg }} >= 0.7.12
Requires:       {{ 'netifaces' | py2pkg }} >= 0.10.4
Requires:       {{ 'oslo.i18n' | py2pkg }} >= 2.1.0
Requires:       {{ 'pytz' | py2pkg }} >= 2013.6
Requires:       {{ 'six' | py2pkg }} >= 1.9.0
BuildArch:      noarch

%description
The oslo.utils library provides support for common utility type functions,
such as encoding, exception handling, string manipulation, and time handling.

%package doc
Summary:        Documentation for OpenStack utils library
BuildRequires:  {{ 'Sphinx' | py2pkg }}
BuildRequires:  {{ 'oslosphinx' | py2pkg }}

%description doc
Documentation for OpenStack utils library.

%prep
%setup -q -n %{sname}-%{version}

%build
%{__python2} setup.py build

%install
%{__python2} setup.py install --skip-build --root %{buildroot}

# generate html docs
%{__python2} setup.py build_sphinx
# remove the sphinx-build leftovers
rm -rf doc/build/html/.{doctrees,buildinfo}

%check
%{__python2} setup.py test

%files
%license LICENSE
%doc AUTHORS ChangeLog README.rst
%{python2_sitelib}/oslo_utils
%{python2_sitelib}/*.egg-info

%files doc
%doc doc/build/html
%license LICENSE

%changelog
